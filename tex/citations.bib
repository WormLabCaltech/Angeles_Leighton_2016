journal = {PLoS Neglected Tropical Diseases},
number = {10},
pmid = {23145190},
title = {{RNAseq Analysis of the Parasitic Nematode Strongyloides stercoralis Reveals Divergent Regulation of Canonical Dauer Pathways}},
